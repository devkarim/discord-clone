{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=...{./apps/backend} --no-cache --force",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start:backend": "turbo run start --filter=...{./apps/backend} --no-cache --force",
    "db:push": "turbo run db:push && turbo run db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "^1.10.13"
  },
  "packageManager": "pnpm@8.6.10",
  "name": "discord-clone"
}
